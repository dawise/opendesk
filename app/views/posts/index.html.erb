<% @posts.each do |post| %>
        <%= post.title %>
        <%= post.description %>
        <%= image_tag post.image.url (:medium) %>
        <%= post.user.email if post.user %>
        <%= link_to 'Show', post %>
        <% if post.user == current_user %>
        <%= link_to 'Edit', edit_post_path(post) %>
        <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
  <% end %>